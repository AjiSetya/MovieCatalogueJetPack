<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModelDetailMovie"
            type="com.blogsetyaaji.moviecatalogue.ui.detailmovie.DetailMovieViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.detailmovie.DetailMovieActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bg_detail_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@{viewModelDetailMovie.data.name}"
                android:scaleType="fitXY"
                app:image="@{viewModelDetailMovie.data.poster}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <View
                android:id="@+id/overlay_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/purple_opacity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrain_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/container_detail_margin"
                android:background="@drawable/detail_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:transitionName="container_transition">

                <TextView
                    android:id="@+id/text_desc_movie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/view_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/overview_detail"
                    android:text="@{viewModelDetailMovie.data.overview}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/storyline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/relative_card"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                app:layout_constraintBottom_toTopOf="@+id/constrain_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constrain_detail">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="@dimen/width_detail_img"
                    android:layout_height="@dimen/height_detail_img"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="110dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:transitionName="img_movie_trasition"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/img_detail_movie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@{viewModelDetailMovie.data.name}"
                        android:scaleType="centerCrop"
                        app:image="@{viewModelDetailMovie.data.poster}"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>


            <TextView
                android:id="@+id/text_name_movie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:fontFamily="@font/rubik_bold"
                android:maxLines="3"
                android:transitionName="title_movie_transition"
                android:singleLine="false"
                android:text="@{viewModelDetailMovie.data.name}"
                android:textAlignment="textStart"
                android:textSize="@dimen/title_detail"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/relative_card"
                app:layout_constraintTop_toTopOf="@+id/constrain_detail" />

            <RatingBar
                android:id="@+id/rating_detail_movie"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:transitionName="rating_movie_transition"
                android:numStars="5"
                app:layout_constraintStart_toStartOf="@+id/text_name_movie"
                app:layout_constraintTop_toBottomOf="@+id/text_name_movie"
                app:rating="@{viewModelDetailMovie.data.rating}" />

            <TextView
                android:id="@+id/vote_detail_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_margin"
                android:fontFamily="@font/rubik_bold"
                android:textSize="@dimen/vote_detail"
                android:textStyle="bold"
                app:doubleToString="@{viewModelDetailMovie.data.rating}"
                app:layout_constraintBottom_toBottomOf="@+id/rating_detail_movie"
                app:layout_constraintStart_toEndOf="@+id/rating_detail_movie"
                app:layout_constraintTop_toTopOf="@+id/rating_detail_movie" />

            <ImageButton
                android:id="@+id/detail_movie_back"
                android:layout_width="@dimen/share_detail"
                android:layout_height="@dimen/share_detail"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_top_acton"
                android:background="@drawable/back_bg"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/detail_movie_share"
                android:layout_width="@dimen/share_detail"
                android:layout_height="@dimen/share_detail"
                android:layout_marginTop="@dimen/margin_top_acton"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@drawable/back_bg"
                android:contentDescription="@string/back_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_share" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>